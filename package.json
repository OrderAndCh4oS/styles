{
  "name": "@orderandchaos/styles",
  "version": "1.9.4",
  "description": "Stylesheets framework",
  "repository": {
    "type": "git",
    "url": "https://github.com/sarcoma/orderandchaos-styles"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "css": "node-sass sass/styles.scss -o dist --output-style=compressed --precision=4",
    "watch": "node-sass sass/styles.scss -o public -w -r --output-style=compact --source-map=true --precision=4",
    "styleguide": "npm run css && node-sass sass/styles.scss -o docs/styles && nucleus --title 'Style Guide' --config config.nucleus.json"
  },
  "keywords": [
    "sass",
    "css",
    "styles"
  ],
  "author": {
    "name": "Sarcoma",
    "email": "sean@orderandchaoscreative.com",
    "url": "https://orderandchaoscreative.com/"
  },
  "license": "MIT",
  "dependencies": {
    "modularscale-sass": "^3.0.8",
    "node-sass": "^4.11.0"
  },
  "devDependencies": {
    "http-server": "^0.11.1",
    "nucleus-styleguide": "^1.1.1"
  }
}
