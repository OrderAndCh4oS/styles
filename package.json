{
  "name": "@orderandchaos/styles",
  "version": "1.0.0",
  "description": "Stylesheets framework",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "serve": "http-server -o",
    "css": "node-sass sass/main.scss -o build --output-style=compressed --precision=4",
    "watch": "node-sass sass/main.scss -o public -w -r --output-style=compact --source-map=true --precision=4",
    "styleguide": "nucleus --config config.nucleus.json"
  },
  "keywords": [
    "sass",
    "framework",
    "css",
    "styles"
  ],
  "author": {
    "name": "Sarcoma",
    "email": "sean@orderandchaoscreative.com",
    "url": "https://orderandchaoscreative.com/"
  },
  "license": "MIT",
  "dependencies": {
    "modularscale-sass": "^3.0.8",
    "node-sass": "^4.11.0"
  },
  "devDependencies": {
    "http-server": "^0.11.1",
    "nucleus-styleguide": "^1.1.1"
  }
}
